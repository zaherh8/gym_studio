<%!-- Meet Our Trainers Section --%>
<section id="trainers" class="py-16 sm:py-20 md:py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12 sm:mb-16">
      <span class="inline-block text-primary font-semibold text-sm uppercase tracking-wider mb-3">
        Our Team
      </span>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Meet Your <span class="text-primary">Trainers</span>
      </h2>
      <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto">
        Certified professionals who are passionate about helping you succeed
      </p>
    </div>

    <%= if @trainers != [] do %>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 max-w-6xl mx-auto">
        <%= for trainer <- @trainers do %>
          <div class="group">
            <div class="relative overflow-hidden rounded-2xl mb-4">
              <div class="aspect-[3/4] bg-gradient-to-br from-neutral to-base-300 flex items-center justify-center">
                <%= if trainer.photo_url do %>
                  <img
                    src={trainer.photo_url}
                    alt={trainer.user.name || trainer.user.email}
                    class="w-full h-full object-cover"
                  />
                <% else %>
                  <div class="text-center p-6">
                    <div class="w-24 h-24 rounded-full bg-white/10 flex items-center justify-center mx-auto mb-3">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-12 w-12 text-white/40"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                        />
                      </svg>
                    </div>
                    <span class="text-white/40 text-sm">Photo Coming Soon</span>
                  </div>
                <% end %>
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
              </div>
            </div>
            <h3 class="text-xl font-bold mb-1 text-gray-900">
              {trainer.user.name || trainer.user.email}
            </h3>
            <%= if trainer.specializations != [] do %>
              <p class="text-primary font-medium text-sm mb-2">
                {Enum.join(trainer.specializations, " & ")}
              </p>
            <% end %>
            <%= if trainer.bio do %>
              <p class="text-gray-600 text-sm leading-relaxed">{trainer.bio}</p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">
          Our trainer profiles are being updated. Check back soon!
        </p>
      </div>
    <% end %>

    <div class="text-center mt-10">
      <a href={~p"/trainers"} class="btn btn-outline btn-primary rounded-full">
        View All Trainers
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
  </div>
</section>

