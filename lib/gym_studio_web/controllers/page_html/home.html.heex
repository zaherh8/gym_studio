<Layouts.flash_group flash={@flash} />

<%!-- Hero Section - Dark with optional background image --%>
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <%!-- Background: Dark gradient that works standalone or with an image overlay --%>
  <%!-- To add a hero image: uncomment the img tag below and adjust the overlay opacity --%>
  <div class="absolute inset-0 bg-gradient-to-br from-neutral via-base-300 to-neutral"></div>
  <img src="/images/hero-gym.png" alt="" class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/60 to-primary/30"></div>

  <%!-- Subtle pattern overlay for texture --%>
  <div
    class="absolute inset-0 opacity-5"
    style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.4&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
  >
  </div>

  <div class="relative z-10 container mx-auto px-4 py-20 sm:py-24 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <%!-- Badge --%>
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">
        <span class="w-2 h-2 bg-primary rounded-full animate-pulse"></span>
        <span class="text-white/90 font-medium text-sm sm:text-base">
          Private Studio in Lebanon
        </span>
      </div>

      <%!-- Main Heading --%>
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black mb-6 tracking-tight">
        <span class="text-primary">REACT</span>
        <span class="text-white"> GYM</span>
      </h1>

      <%!-- Subheading with better value proposition --%>
      <p class="text-xl sm:text-2xl md:text-3xl text-white/90 font-light mb-4 leading-relaxed">
        Where Fitness Meets <span class="text-primary font-semibold">Personal Attention</span>
      </p>

      <p class="text-base sm:text-lg text-white/70 max-w-2xl mx-auto mb-8 leading-relaxed">
        One-on-one training sessions in a private, welcoming studio.
        No crowds, no distractions — just you, your trainer, and your goals.
      </p>

      <%!-- CTA Buttons --%>
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href={~p"/users/register"}
          class="btn btn-primary btn-lg text-base sm:text-lg rounded-full shadow-lg shadow-primary/30 hover:shadow-xl hover:shadow-primary/40 hover:scale-105 transition-all"
        >
          Start Your Journey
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
        <a
          href="#trainers"
          class="btn btn-outline btn-lg text-base sm:text-lg rounded-full border-white/30 text-white hover:bg-white/10 hover:border-white/50"
        >
          Meet Our Trainers
        </a>
      </div>

      <%!-- Social Proof Stats --%>
      <div class="grid grid-cols-3 gap-4 sm:gap-8 max-w-lg mx-auto">
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-black text-primary">50+</div>
          <div class="text-white/60 text-xs sm:text-sm">Happy Members</div>
        </div>
        <div class="text-center border-x border-white/20">
          <div class="text-3xl sm:text-4xl font-black text-primary">5</div>
          <div class="text-white/60 text-xs sm:text-sm">Expert Trainers</div>
        </div>
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-black text-primary">1:1</div>
          <div class="text-white/60 text-xs sm:text-sm">Personal Sessions</div>
        </div>
      </div>
    </div>
  </div>

  <%!-- Scroll indicator --%>
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#why-us" class="block">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8 text-white/50 hover:text-white/80 transition-colors"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        />
      </svg>
    </a>
  </div>
</section>

<%!-- Why Choose Us Section --%>
<section id="why-us" class="py-16 sm:py-20 md:py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12 sm:mb-16">
      <span class="inline-block text-primary font-semibold text-sm uppercase tracking-wider mb-3">
        Why React Gym?
      </span>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Training That Feels <span class="text-primary">Different</span>
      </h2>
      <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto">
        We're not a typical gym. We're a private studio where every session is tailored to you.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      <%!-- Feature 1 --%>
      <div class="group p-6 sm:p-8 rounded-2xl bg-white border border-gray-200 hover:border-primary/30 hover:shadow-xl hover:shadow-primary/5 transition-all">
        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary/20 to-secondary/10 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-7 w-7 text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            />
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3 text-gray-900">100% Personal Attention</h3>
        <p class="text-gray-600 leading-relaxed">
          Every session is one-on-one. Your trainer focuses entirely on you — your form, your progress, your goals.
        </p>
      </div>

      <%!-- Feature 2 --%>
      <div class="group p-6 sm:p-8 rounded-2xl bg-white border border-gray-200 hover:border-primary/30 hover:shadow-xl hover:shadow-primary/5 transition-all">
        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-secondary/20 to-accent/10 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-7 w-7 text-secondary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            />
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3 text-gray-900">Private & Comfortable</h3>
        <p class="text-gray-600 leading-relaxed">
          No crowds watching. No waiting for equipment. Just a welcoming space designed for focused training.
        </p>
      </div>

      <%!-- Feature 3 --%>
      <div class="group p-6 sm:p-8 rounded-2xl bg-white border border-gray-200 hover:border-primary/30 hover:shadow-xl hover:shadow-primary/5 transition-all sm:col-span-2 lg:col-span-1">
        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-accent/20 to-primary/10 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-7 w-7 text-accent"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3 text-gray-900">Flexible Scheduling</h3>
        <p class="text-gray-600 leading-relaxed">
          Book sessions that fit your life. Reserve in advance, reschedule when needed. Your schedule, your way.
        </p>
      </div>
    </div>
  </div>
</section>

<%!-- Testimonial/Social Proof Section --%>
<section class="py-16 sm:py-20 bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-10">
        <span class="inline-block text-primary font-semibold text-sm uppercase tracking-wider mb-3">
