<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="React Gym" suffix=" Â· Your Personal Training Studio">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="bg-base-100">
    <%!-- Modern Navigation Header --%>
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-base-300/50 shadow-sm">
      <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 sm:h-20">
          <%!-- Logo --%>
          <a href={~p"/"} class="flex items-center gap-2 group">
            <span class="text-xl sm:text-2xl font-black">
              <span class="text-primary group-hover:text-primary/80 transition-colors">REACT</span>
              <span class="text-gray-900 group-hover:text-gray-700 transition-colors"> GYM</span>
            </span>
          </a>

          <%!-- Navigation Links --%>
          <div class="flex items-center gap-2 sm:gap-4">
            <%= if @current_scope do %>
              <span class="text-sm sm:text-base text-gray-600 hidden sm:inline">
                {@current_scope.user.email}
              </span>
              <.link href={~p"/users/settings"} class="btn btn-ghost btn-sm sm:btn-md rounded-full text-gray-700 hover:text-white hover:bg-gray-700">
                Settings
              </.link>
              <.link href={~p"/users/log-out"} method="delete" class="btn btn-outline btn-sm sm:btn-md rounded-full text-gray-700 border-gray-300 hover:text-white hover:bg-primary hover:border-primary">
                Log out
              </.link>
            <% else %>
              <.link href={~p"/users/log-in"} class="btn btn-ghost btn-sm sm:btn-md rounded-full text-gray-700 hover:text-white hover:bg-gray-700">
                Log in
              </.link>
              <.link href={~p"/users/register"} class="btn btn-primary btn-sm sm:btn-md rounded-full shadow-md hover:shadow-lg transition-all">
                Get Started
              </.link>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    {@inner_content}
  </body>
</html>
